generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id         String      @id @unique(map: "usuario_id_UNIQUE") @default(uuid()) @db.Uuid
  nome       String      @db.VarChar(100)
  cargo      String      @db.VarChar(100)
  foto_id    String?     @db.Uuid
  foto       Imagem?     @relation(fields: [foto_id], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "fk_usuario_foto")
  pontuacao  Int        @default(0)
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt
  pontuacoes Pontuacao[]
}

model Imagem {
  id        String    @id @unique(map: "imagem_id_UNIQUE") @default(uuid()) @db.Uuid
  imagem    Bytes
  tipo_mime String    @db.VarChar(20)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  users     Usuario[]
}

model Pontuacao {
  id         String   @id @unique(map: "pontuacao_id_UNIQUE") @default(uuid()) @db.Uuid
  motivo     String   @db.VarChar(556)
  pontos     Int      @default(0)
  usuario_id String   @db.Uuid
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  usuario    Usuario  @relation(fields: [usuario_id], references: [id], onDelete: Cascade)
}
